@using Bilog.Data;
@using Bilog.Data.Models;
@inherits OwningComponentBase<GeneralSettingsService>
  <!-- CSS Files -->
<link href="Dashboard/css/bootstrap.min.css" rel="stylesheet" />
<link href="Dashboard/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
<!-- CSS Just for demo purpose, don't include it in your project -->
<link href="Dashboard/demo/demo.css" rel="stylesheet" />
<div class="sidebar" data-color="white" data-active-color="danger">
    <!--
        Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
    -->
    <div class="logo">
        <a href="/" class="simple-text logo-mini">
            <div class="logo-image-small">
                <img src="@objGeneralSettings.ApplicationLogo">
            </div>
        </a>
        <a href="/" class="simple-text logo-normal">
            @objGeneralSettings.ApplicationName
            <!-- <div class="logo-image-big">
              <img src="../assets/img/logo-big.png">
            </div> -->
        </a>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">
            <li class="ajy">
                <NavLink Match="NavLinkMatch.All" href="dashboard">
                    <i class="nc-icon nc-app"></i>
                    <p>Dashboard</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="dashboard/blogs">
                    <i class="nc-icon nc-book-bookmark"></i>
                    <p>Blog</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="dashboard/projects">
                    <i class="nc-icon nc-briefcase-24"></i>
                    <p>Projects</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="dashboard/messages">
                    <i class="nc-icon nc-email-85"></i>
                    <p>Messages</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="dashboard/settings">
                    <i class="nc-icon nc-settings-gear-65"></i>
                    <p>Settings</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="dashboard/resume">
                    <i class="nc-icon nc-send"></i>
                    <p>Resume</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="./typography.html">
                    <i class="nc-icon nc-ruler-pencil"></i>
                    <p>Notes</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="./typography.html">
                    <i class="nc-icon nc-cloud-upload-94"></i>
                    <p>Drive</p>
                </NavLink>
            </li>
            <li>
                <NavLink Match="NavLinkMatch.All" href="./typography.html">
                    <i class="nc-icon nc-refresh-69"></i>
                    <p>Managed Services</p>
                </NavLink>
            </li>

        </ul>
    </div>
</div>

@code {
    GeneralSettings objGeneralSettings;
      bool collapseNavMenu = true;
  
    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        objGeneralSettings = await @Service.GetGeneralSettingsAsync();
         }

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}